<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prodcast.samayu.samayusoftcorp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.montecito.samayu.ui.MontecitoApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.montecito.samayu.ui.LoginScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.montecito.samayu.ui.Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.montecito.samayu.ui.ItemBinDetails"
            android:label="@string/title_activity_item_bin_details"
            android:theme="@style/AppTheme" />
        <activity android:name="com.montecito.samayu.ui.BinMonitor" />
        <activity android:name="com.montecito.samayu.ui.UserProfile" />
        <activity android:name="com.montecito.samayu.ui.ReportScreen"></activity>
    </application>

</manifest>
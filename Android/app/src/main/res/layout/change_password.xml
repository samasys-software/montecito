<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_change"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:gravity="center_vertical"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/old_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/old_pwd">

            <EditText
                android:id="@+id/oldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/size_15"
                android:textColorHint="@color/name"
                android:textColor="@color/name"
                android:inputType="textPassword"
                android:textAllCaps="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_layout"
            android:layout_below="@+id/old_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_pwd">

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/name"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/size_15"
                android:textColor="@color/name"
                android:inputType="textPassword"
                android:textAllCaps="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/num_layout"
            android:layout_below="@+id/new_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_pwd">

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/name"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/size_15"
                android:textColor="@color/name"
                android:inputType="textPassword"
                android:textAllCaps="true"/>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:weightSum="1">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/button_style"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/cancel"/>

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@drawable/button_style"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/save"/>

    </LinearLayout>

</LinearLayout>
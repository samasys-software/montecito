<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#10000000"
        android:layout_marginTop="8dp"
        android:id="@+id/mainLayout"
        android:orientation="vertical">

    <!-- Text Box Start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/locationLayout"
            android:padding="0dp" >

            <TextView
               android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:id="@+id/locationTextHint"
                android:gravity="top"
                android:textColor="@color/name"

                />

            <Spinner
                android:id="@+id/location"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:visibility="visible"
                android:background="@drawable/border_spinner"
               />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/FloorLayout"
            android:layout_marginLeft="5dp"

            android:padding="0dp" >
            <TextView

                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floor"
                android:id="@+id/floorTextHint"
                android:gravity="top"
                android:textColor="@color/name"
                />

            <Spinner
                android:layout_weight="2"
                android:id="@+id/floor"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:visibility="visible"
                android:background="@drawable/border_spinner"
               />
     </LinearLayout>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="0dp" >

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:id="@+id/cardviewImage"
                   android:gravity="top"
                   android:visibility="gone"

                  android:layout_marginTop="10dp"
                   android:background="@drawable/cardview"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/listViewImage"
                    android:gravity="top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/listview"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                >
                <TextView
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sort by"
                    style="@style/textView"
                    android:id="@+id/sortTextHint"
                    android:gravity="top"
                    android:textColor="@color/name"

                    />

                <Spinner
                    android:id="@+id/sortby"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:visibility="visible"
                    android:background="@drawable/border_spinner"
                   />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_below="@id/mainLayout"
        android:orientation="vertical">

        <ViewStub
            android:id="@+id/stub_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/bin_item_list_view"/>

        <ViewStub
            android:id="@+id/stub_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/bin_items_cardview"/>

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.montecito.samayu.ui.UserProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/UserProfileDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="0sp"
        android:gravity="center_horizontal"
       >
       <ImageView
           android:id="@+id/userImage"
           android:layout_width="100dp"
           android:layout_height="100dp"
           app:srcCompat="@drawable/user_icon"
           />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/name"
            android:layout_below="@+id/userImage"
            android:text="Ramji Rengarajan"/>

        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        >

    <LinearLayout
        android:id="@+id/UserDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/UserProfileDetails"
        android:padding="0sp"
        android:orientation="vertical"
       >
        <TextView
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameHint"
            android:text="First Name"
            android:layout_marginTop="10dp"
            android:textColor="@color/name"
           />
        <TextView

            android:id="@+id/lastNameHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="@color/name"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/firstNameHint"/>
        <TextView
            android:id="@+id/dopHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Of Birth"
            android:textColor="@color/name"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/lastNameHint"/>
        <TextView
            android:id="@+id/designationHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Designation"
            android:textColor="@color/name"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/dopHint"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/name"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/name"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/name"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/name"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ramji"
                android:textColor="@color/name"
                android:layout_weight="5"
                android:layout_marginTop="10dp"
                android:id="@+id/userFirstName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rengarajan"
                android:layout_weight="5"
                android:layout_marginTop="10dp"
                android:textColor="@color/name"
                android:id="@+id/userLastName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01-JAN-1989"
                android:layout_weight="5"
                android:textColor="@color/name"
                android:layout_marginTop="10dp"
                android:id="@+id/userDateOfBirth"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Director"
                android:layout_weight="5"
                android:textColor="@color/name"
                android:layout_marginTop="10dp"
                android:id="@+id/userDesignation"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ChangePasswordLayout"
        android:layout_below="@id/UserDetails"
        android:paddingRight="10sp"
        android:layout_weight="1.5"
        android:orientation="horizontal">


        <TextView
            style="@style/header"
            android:id="@+id/BinDetailsId"
            android:layout_weight="1.5"
            android:textColor="@color/Heading"
            android:text="Change Password" />

        <ImageButton
            style="@style/header"
            android:layout_weight="0"
            android:background="@null"
            android:src="@drawable/downarrow"
            android:id="@+id/changeButton"/>

    </LinearLayout>

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/ChangePasswordDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ChangePasswordLayout"
        android:padding="0sp"
        app:ael_duration="400"
        app:ael_expanded="false"
        app:ael_interpolator="bounce"
        app:ael_orientation="vertical">

        <include
            android:id="@+id/changePassword"
            layout="@layout/change_password"/>

    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
